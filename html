      ];
        const countryFactsContainer = document.getElementById("country-facts");
        const searchBox = document.getElementById("search-box");
        // Dynamically populate country data
        countries.forEach(country => {
            const countryDiv = document.createElement("div");
            countryDiv.className = "country";
            countryDiv.innerHTML = `
                <img src="${country.flag}" alt="${country.name} Flag" class="flag">
                <div class="info">
                    <h2>${country.name}</h2>
                    <p>Did you know? ${country.fact}</p>
                </div>
            `;
            countryFactsContainer.appendChild(countryDiv);
        });
        function renderCountries(countriesToRender) {
            countryFactsContainer.innerHTML = '';
            countriesToRender.forEach(country => {
                const countryDiv = document.createElement("div");
                countryDiv.className = "country";
                countryDiv.innerHTML = `
                    <img src="${country.flag}" alt="${country.name} Flag" class="flag">
                    <div class="info">
                        <h2>${country.name}</h2>
                        <p>Did you know? ${country.fact}</p>
                    </div>
                `;
                countryFactsContainer.appendChild(countryDiv);
            });
        }

        function filterCountries() {
            const query = searchBox.value.toLowerCase();
            const filteredCountries = countries.filter(country => country.name.toLowerCase().includes(query));
            renderCountries(filteredCountries);
        }

        searchBox.addEventListener("input", filterCountries);

        // Initially render all countries
        renderCountries(countries);
    </script>
</body>
</html>
